<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="com.example.yoons.room.Fragment.DeviceRemoteSelectFragment"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/backButtonInSelectRemote"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/selectBrandDeviceRemoteText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="516dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectBrandDeviceRemoteText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="Select your device remote"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deviceBrandinRemote"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_below="@+id/deviceTypeinRemote"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceTypeinRemote"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectRemoteBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/selectRemoteNextButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="292dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectRemoteNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/deviceBrandinRemote"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="292dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectRemotePower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/selectBrandDeviceRemoteText"
        android:layout_alignStart="@+id/selectBrandDeviceRemoteText"
        android:layout_marginStart="128dp"
        android:layout_marginTop="224dp"
        android:src="@drawable/ic_power_settings_new_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectRemoteMenu"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignTop="@+id/selectRemoteVolumeDown"
        android:layout_marginEnd="132dp"
        android:layout_marginTop="224dp"
        android:src="@drawable/ic_menu_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectRemoteVolumeDown"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignLeft="@+id/selectRemoteVolumeUp"
        android:layout_alignStart="@+id/selectRemoteVolumeUp"
        android:layout_below="@+id/selectRemoteVolumeUpText"
        android:layout_marginStart="124dp"
        android:layout_marginTop="316dp"
        android:src="@drawable/ic_volume_down_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectRemoteVolumeUp"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_above="@+id/selectRemoteVolumeUpText"
        android:layout_alignLeft="@+id/selectRemoteVolumeUpText"
        android:layout_alignStart="@+id/selectRemoteVolumeUpText"
        android:layout_marginRight="136dp"
        android:layout_marginTop="316dp"
        android:src="@drawable/ic_volume_up_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/selectRemoteBackButton"
        android:layout_alignLeft="@+id/selectRemotePower"
        android:layout_alignStart="@+id/selectRemotePower"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="128dp"
        android:text="POWER"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/selectRemoteVolumeDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectRemotePower"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/selectRemoteMenu"
        android:layout_alignStart="@+id/selectRemoteMenu"
        android:layout_below="@+id/selectRemoteMenu"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="132dp"
        android:text="MENU"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/selectRemoteVolumeUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectRemoteMenu"
        app:layout_constraintVertical_bias="0.266" />

    <TextView
        android:id="@+id/selectRemoteVolumeDownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/selectBrandDeviceRemoteText"
        android:layout_alignRight="@+id/selectBrandDeviceRemoteText"
        android:layout_below="@+id/selectRemoteVolumeDown"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"
        android:text="VOLUME DOWN"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectRemoteVolumeDown" />

    <TextView
        android:id="@+id/selectRemoteVolumeUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selectRemoteNextButton"
        android:layout_alignLeft="@+id/selectRemoteVolumeDownText"
        android:layout_alignStart="@+id/selectRemoteVolumeDownText"
        android:layout_marginEnd="116dp"
        android:layout_marginTop="4dp"
        android:text="VOLUME UP"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectRemoteVolumeUp" />

    <TextView
        android:id="@+id/versionNumberRemoteSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmRemoteSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="408dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="OK!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
